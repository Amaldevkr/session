<body>
    <header>
        <nav class="navbar navbar-dark bg-dark">
            <div class="container">
              <a class="navbar-brand" href="#">Add Product</a>
            </div>
            <form class="d-flex">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-light bg-dark btn btn-primary btn-lg" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Accounts
                </a>
                <ul class="dropdown-menu btn btn-dark " aria-labelledby="navbarDropdown">
                  <li><a onclick="location.href='/settings';" class="dropdown-item" href="#">settings</a></li>
  
                  <li><a onclick="location.href='/logout';" class="dropdown-item" href="#">Logout</a></li>
                </ul>
              </li>
          </nav>
    </header>
    <div class="container-fluid home">
       <div class="col-12 col-sm-6 col-md-3">
        <button style="margin: 50px; margin-left: 30px; height: 50px;width: 150px;" type="button" class="btn btn-primary">Add product</button>
       </div>
<section>
  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">no</th>
          <th scope="col">name</th>
          <th scope="col">catagory</th>
          <th scope="col">description</th>
          <th scope="col">image</th>

        </tr>
      </thead>
      <tbody>

        <% for(i of addproducts){ %>
          <tr>
          <th scope="row"><%= i.no%></th>>
          <td><%= i.name %></td>
          <td><%= i.catogory %></td>
          <td><%= i.description %></td>
          <td><img style="height: 50px; width: 50px;" src='<%=i.image %>' class=" w-100 hover-shadow card-img-top " alt="..."></td>

        </tr>
        <% } %>
      </tbody>
    </table>
    <button style="margin-left: 1150px;" type="button" class="btn btn-danger">Delete products</button>

  </div>
</section>
      </div>
</body>
